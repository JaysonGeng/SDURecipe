<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Detail</servlet-name>
        <servlet-class>Servlet.Detail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Detail</servlet-name>
        <url-pattern>/Servlet.Detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FindBookPictureServlet</servlet-name>
        <servlet-class>Servlet.FindBookPictureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindBookPictureServlet</servlet-name>
        <url-pattern>/Servlet.FindBookPictureServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Classify</servlet-name>
        <servlet-class>Servlet.Classify</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Classify</servlet-name>
        <url-pattern>/Servlet.Classify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResultServlet</servlet-name>
        <servlet-class>Servlet.ResultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResultServlet</servlet-name>
        <url-pattern>/Servlet.ResultServlet</url-pattern>
    </servlet-mapping>
</web-app>
